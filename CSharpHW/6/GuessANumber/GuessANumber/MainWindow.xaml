<Window x:Class="GuessANumber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessANumber"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="116" Margin="37,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="323" FontSize="38"><Run Text="Number is picked!"/><LineBreak/><Run FontSize="38" Text="Your guess is"/></TextBlock>
        <TextBox x:Name="guessBox" HorizontalAlignment="Left" FontSize ="30" Height="116" Margin="365,46,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="113"/>
        <TextBlock x:Name="result" HorizontalAlignment="Left" Height="71" FontSize ="20" Margin="37,196,0,0" TextWrapping="Wrap" Text="Success!" VerticalAlignment="Top" Width="221"/>
        <Button x:Name="guessBtn" Content="Guess" HorizontalAlignment="Left" FontSize="30" Height="70" Margin="287,197,0,0" VerticalAlignment="Top" Width="191" Click="GuessNumber"/>

    </Grid>
</Window>
